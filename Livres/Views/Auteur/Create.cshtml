@model Livres.Models.Auteur

<form asp-action="Create" method="post">
    <div>
        <label asp-for="Prenom">Prénom: </label>
        <input asp-for="Prenom" type="text">
    </div>
    <div>
        <label asp-for="Nom">Nom: </label>
        <input asp-for="Nom" type="text">
    </div>
    <div>
        <label asp-for="DateNaissance">Date de naissance: </label>
        <input asp-for="DateNaissance" type="date">
    </div>
    <input type="submit" value="Ajouter un auteur" class="btn btn-primary" />
</form>

<a asp-action="Index">Retour à la liste d'auteurs</a>
